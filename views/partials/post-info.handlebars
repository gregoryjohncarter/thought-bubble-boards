<article class="post"></article>
    <div class="card blue-grey darken-1">
        <div class="card-content white-text">
            <span class="card-title title"><a href="/post/{{id}}" target="_blank">{{title}}</a></span>
                <p class="preserve">{{content}}</p>
        </div>
        <div class="secondary-post">
            Posted by {{user.username}} on {{format_date created_at}} <span class="grey">|</span>
            <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
    </div>
</article> 